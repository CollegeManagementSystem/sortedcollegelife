<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studentlogin">
    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="110dp"
        android:text="WELCOME"
        android:textColor="@android:color/holo_blue_light"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/ic_teacher" />
    <EditText
        android:id="@+id/studentname"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="120dp"
        android:hint="Name"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/ic_roll" />
    <EditText
        android:id="@+id/studentroll"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:hint="Roll Number"
        android:layout_marginLeft="120dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/ic_phone" />
    <EditText
        android:id="@+id/studentphone"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="120dp"
        android:hint="Contact Number"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="390dp"
        android:background="@drawable/ic_class" />
    <EditText
        android:id="@+id/studentclass"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="120dp"
        android:hint="Class"/>

    <Button
        android:id="@+id/studentsubmit"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="470dp"
        android:text="Submit"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:background="@android:color/background_light" />
</android.widget.RelativeLayout>